@model IEnumerable<Lennujaam_MVC.Models.Lend>

@{
	ViewData["Title"] = "Lennud";
}

<h1>Lennud</h1>

<table class="table table-striped">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.LennuNR)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.KohtadeArv)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ReisijateArv)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Otspunkt)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Sihtpunkt)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ValjumisAeg)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Lopetatud)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Kestvus)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
					<tr>
					<td>
					@Html.DisplayFor(modelItem => item.LennuNR)
					</td>
					<td>
					@Html.DisplayFor(modelItem => item.KohtadeArv)
					</td>
					<td>
					@Html.DisplayFor(modelItem => item.ReisijateArv)
					</td>
					<td>
					@Html.DisplayFor(modelItem => item.Otspunkt)
					</td>
					<td>
					@Html.DisplayFor(modelItem => item.Sihtpunkt)
					</td>
					<td>
					@Html.DisplayFor(modelItem => item.ValjumisAeg)
					</td>
					<td>
					@Html.DisplayFor(modelItem => item.Lopetatud)
					</td>
					<td>
					@Html.DisplayFor(modelItem => item.Kestvus)
					</td>
					<td>
						<form asp-action="LisaKestvus" method="POST">
							<input type="hidden" name="id" value="@item.ID" style="width: 50px;"/>
							<input type="number" name="days" style="width: 50px;" min="0"/>
							<label>Days</label>
							<input type="number" name="hours" style="width: 50px;" max="23" min="0"/>
							<label>Hours</label>
							<input type="number" name="minutes" style="width: 50px;" max="59" min="0"/>
							<label>Minutes</label>
							<input type="submit" value="Lisa Aeg" class="btn btn-primary" />
						</form>
					</td>
				</tr>
		}
	</tbody>
</table>